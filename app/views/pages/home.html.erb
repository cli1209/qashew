    <section class="jumbotron text-center" style="background-image: url('paper_fibers.png');height:200%;margin-bottom:0;">
	  	<div class="container-fluid">
			<div class="row">
				<div class="col-md-6 col-md-offset-3"> 
				    <h1 style="font-size: 70px;"><b>Q<span style="font-size:45px;"><sup>+</sup></span>A</b>shew
				    <img src="cashew.png" alt="Cashew" style="width:15%; height:15%;"></h1>
				    <p class="lead text-muted" style="font-size:30px;">
					    a campus forum for academic advising <br>
					    created for students, by students
					</p>
					<br>
					<div class="col-md-8 col-md-offset-2">
						<div class="panel panel-default">
						    <div class="panel-heading" style="background-color: #ededed">
						        <h3 class="panel-title text-center">Sign up</h3>
						    </div>
						    <div class="panel-body">
						        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
							        <%= devise_error_messages! %>
								    <div class="form-group">
								        <%= f.label :email, "University email address" %><br />
								        <%= f.email_field :email, class:"form-control", placeholder:"netid@princeton.edu" %>
								    </div>

								    <div class="form-group">
								        <%= f.label :password %>
								        <% if @minimum_password_length %>
								        <em>(<%= @minimum_password_length %> characters minimum)</em>
								        <% end %><br />
								        <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Create a password"%>
								    </div>

								    <div class="form-group">
								        <%= f.label :password_confirmation %><br />
								        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"Re-enter your password"%>
								    </div>
								    <div class="actions">
								        <%= f.submit "Join the community", class:"btn btn-success btn-block" %>
								    </div>
							    <% end %>
						    </div>
					    </div>
					</div>
			    </div>
			</div>
		</div>
	</section>

