<li style="display:inline;">
  	<div style="margin-left:20px; margin-right:20px; margin-top:1px; margin-bottom:1px">
	  	<% if Answer.find_by_id(notification.identifier).anon %>
		  	<%= link_to "Anonymous #{notification.notice_type}ed  your question", link_through_path(notification)%> <%="#{time_ago_in_words(notification.created_at)} ago"%> 
	  	<% else %>
	  		<%= link_to "#{notification.notified_by.username} #{notification.notice_type}ed  your question", link_through_path(notification)%> <%="#{time_ago_in_words(notification.created_at)} ago"%>
	  	<% end %>
	  	<br> 
	  	<span class="text-muted" style="text-align:left;"><b><%=Question.find_by_id(notification.question_id).headline.truncate(40)%></b>
	  	<br>
	  	<span class="text-muted" style="text-align:left;"><i><%=Answer.find_by_id(notification.identifier).content.truncate(40)%></i>
	</div>
</li>
 <li class="divider"></li>